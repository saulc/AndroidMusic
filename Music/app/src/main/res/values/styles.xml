<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">?colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_material_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme"  parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- Divider -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="DarkSide" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/darksidecp</item>
        <item name="colorPrimaryDark">@color/darksidecd</item>
        <item name="colorAccent">@color/darksideca</item>
    </style>

    <style name="AppThemeNior" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:colorBackground">?colorPrimaryDark</item>
    </style>

    <style name="AppThemeColors" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorPrimary">@color/colorscp</item>
        <item name="colorPrimaryDark">@color/colorscd</item>
        <item name="colorAccent">@color/colorsca</item>
        <item name="android:colorBackground">?colorPrimaryDark</item>
    </style>

    <style name="AppThemeJarvis" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/jarviscp</item>
        <item name="colorPrimaryDark">@color/jarviscd</item>
        <item name="colorAccent">@color/jarvisca</item>
    </style>


</resources>
