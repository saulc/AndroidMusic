<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    android:animateLayoutChanges="true"
    android:background="@android:color/transparent"
    android:id="@+id/llnow"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/currentIcon"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/gradientbox" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="@dimen/text_margin">

        <ImageButton
            android:id="@+id/shuffleButton"
            android:layout_width="@dimen/now_button"
            android:layout_height="@dimen/now_button"
            android:background="@drawable/gradientcircle"
            android:padding="@dimen/top_text_margin"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/shuffle128" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:animateLayoutChanges="true"
            android:background="@drawable/gradientbox"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextSwitcher
                android:id="@+id/currentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:fontFamily="cursive"
                android:lines="1"
                android:text="Now Playing"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextSwitcher
                android:id="@+id/currentSubText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:fontFamily="casual"
                android:lines="1"
                android:text="by ACME"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextSwitcher
                android:id="@+id/currentSubText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:fontFamily="casual"
                android:lines="1"
                android:text="ACME"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/repeatButton"
            android:layout_width="@dimen/now_button"
            android:layout_height="@dimen/now_button"
            android:background="@drawable/boarder"
            android:padding="@dimen/top_text_margin"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/repeat128" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/postText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="12sp"
            android:typeface="monospace"
            android:textColor="?colorPrimary" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_text_margin"
            android:layout_marginRight="@dimen/top_text_margin"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="12sp"
            android:typeface="monospace"
            android:textColor="?colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/prevButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:padding="@dimen/big_button_pad"
            android:src="@android:drawable/ic_media_previous" />

        <ImageButton
            android:id="@+id/playpauseButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_weight="3"
            android:background="@android:color/transparent"
            android:padding="@dimen/big_button_pad"
            android:src="@android:drawable/ic_media_play" />

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:padding="@dimen/big_button_pad"
            android:src="@android:drawable/ic_media_next" />

    </LinearLayout>


</LinearLayout>