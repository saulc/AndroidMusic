<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent" >

    <TextView
        android:id="@+id/mixxertext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons"
        android:padding="@dimen/text_margin"
        android:text="TextView" />

    <SeekBar
        android:id="@+id/volbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/top_text_margin"
        android:layout_marginRight="140dp"
        android:layout_marginLeft="80dp" />


    <SeekBar
        android:id="@+id/posbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/volbar"
        android:layout_alignParentRight="true"
        android:padding="@dimen/top_text_margin"
        android:layout_marginRight="140dp"
        android:layout_marginLeft="80dp" />

    <TextView
        android:id="@+id/vlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/top_text_margin"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Volume" />

    <TextView
        android:id="@+id/postionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vlabel"
        android:layout_alignParentRight="true"
        android:padding="@dimen/top_text_margin"
        android:text="Position" />



    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/mcpl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_media_play" />

        <ImageButton
            android:id="@+id/mcpu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_media_pause" />

        <ImageButton
            android:id="@+id/mcpv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_media_previous" />

        <ImageButton
            android:id="@+id/mcnx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_media_next" />

        <ImageButton
            android:id="@+id/mcreset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_menu_revert" />


    </LinearLayout>


</RelativeLayout>
