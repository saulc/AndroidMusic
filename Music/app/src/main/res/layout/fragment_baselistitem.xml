<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/boarder"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/top_text_margin"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingStart="@dimen/top_text_margin"
        android:paddingEnd="@dimen/top_text_margin">

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:lines="1"
            android:text="Test"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/optionbtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/top_text_margin"
        android:layout_weight="0"
        android:background="@android:color/transparent"
        android:padding="@dimen/top_text_margin"
        app:srcCompat="@android:drawable/ic_menu_more" />

    <ImageButton
        android:id="@+id/nextupbtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/top_text_margin"
        android:layout_weight="0"
        android:background="@android:color/transparent"
        android:padding="@dimen/top_text_margin"
        app:srcCompat="@android:drawable/ic_menu_upload" />

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="8sp"
        android:visibility="gone" />

</LinearLayout>
