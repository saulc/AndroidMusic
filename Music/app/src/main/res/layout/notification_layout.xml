<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:id="@+id/llnow"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal">


        <ImageSwitcher
            android:id="@+id/currentIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:srcCompat="@drawable/android_icon32a5" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextSwitcher
                android:id="@+id/currentText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:fontFamily="cursive"
                android:lines="1"
                android:text="Now Playing"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextSwitcher
                android:id="@+id/currentSubText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:lines="1"
                android:text="by ACME"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextSwitcher
                android:id="@+id/currentSubText2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:lines="1"
                android:text="ACME"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>


        <ImageView
            android:id="@+id/prevb"
            android:layout_width="0dp"
            android:layout_height="@dimen/big_button"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/media_03" />

        <ImageView
            android:id="@+id/playpauseb"
            android:layout_width="0dp"
            android:layout_height="@dimen/big_button"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/media_01" />

        <ImageView
            android:id="@+id/nextb"
            android:layout_width="0dp"
            android:layout_height="@dimen/big_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/controlpad"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/media_04" />


</LinearLayout>