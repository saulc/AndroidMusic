<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MixFragment">

    <TextView
        android:id="@+id/mixText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cross Fade Settings"
        android:textAlignment="center" />


        <TextView
            android:id="@+id/label0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fade In Duration:"
            android:textAlignment="center" />
        <SeekBar
            android:id="@+id/fade0"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="11"
            android:progress="7" />

        <TextView
            android:id="@+id/label1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fade Out Duration:"
            android:textAlignment="center" />
        <SeekBar
            android:id="@+id/fade1"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="11"
            android:progress="7" />

        <TextView
            android:id="@+id/label2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fade in Gap:"
            android:textAlignment="center" />
        <SeekBar
            android:id="@+id/fade2"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="11"
            android:progress="9" />

        <TextView
            android:id="@+id/label3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fade Out Gap:"
            android:textAlignment="center" />
        <SeekBar
            android:id="@+id/fade3"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="11"
            android:progress="9" />

        <Switch
            android:id="@+id/mixmodeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MIX" />

        <Switch
            android:id="@+id/crossfadeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Fade"
            tools:checked="true" />


</LinearLayout>