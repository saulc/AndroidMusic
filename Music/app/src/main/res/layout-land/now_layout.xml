<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@android:color/transparent"
    android:id="@+id/llnow"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/currentIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/android_icon32a5" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/gradientbox"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextSwitcher
                android:id="@+id/currentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:fontFamily="cursive"
                android:lines="1"
                android:text="Now Playing"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextSwitcher
                android:id="@+id/currentSubText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:fontFamily="casual"
                android:lines="1"
                android:text="by ACME"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextSwitcher
                android:id="@+id/currentSubText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:fontFamily="casual"
                android:lines="1"
                android:text="ACME"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/shuffleButton"
            android:layout_width="@dimen/now_button"
            android:layout_height="@dimen/now_button"
            android:background="@drawable/gradientcircle"
            android:padding="@dimen/top_text_margin"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/shuffle128" />

        <TextView
            android:id="@+id/postText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="?colorPrimary"
            android:textSize="12sp"
            android:typeface="monospace" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_text_margin"
            android:layout_marginRight="@dimen/top_text_margin"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textColor="?colorPrimary"
            android:textSize="12sp"
            android:typeface="monospace" />

        <ImageButton
            android:id="@+id/repeatButton"
            android:layout_width="@dimen/now_button"
            android:layout_height="@dimen/now_button"
            android:background="@drawable/boarder"
            android:padding="@dimen/top_text_margin"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/repeat128" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_button"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/prevButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_weight="2"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:padding="@dimen/top_text_margin"
            android:src="@drawable/media_03" />

        <ImageButton
            android:id="@+id/playpauseButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_weight="3"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:padding="@dimen/top_text_margin"
            android:src="@drawable/media_01" />

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:padding="@dimen/top_text_margin"
            android:src="@drawable/media_04" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".5"
            android:padding="@dimen/top_text_margin"
            android:src="@android:drawable/ic_lock_silent_mode" />

        <SeekBar
            android:id="@+id/volBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_text_margin"
            android:layout_marginRight="@dimen/top_text_margin"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/volu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".5"
            android:padding="@dimen/top_text_margin"
            android:src="@android:drawable/ic_lock_silent_mode_off" />

    </LinearLayout>


</LinearLayout>